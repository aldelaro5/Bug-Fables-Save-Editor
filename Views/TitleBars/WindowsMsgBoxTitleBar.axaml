<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="24"
             x:Class="BugFablesSaveEditor.Views.WindowsMsgBoxTitleBar"
             Height="32"
             DockPanel.Dock="Top">
  <StackPanel>
    <Grid Height="32">
      <DockPanel IsHitTestVisible="False"
                 Name="TitleBarBackground"></DockPanel>
      <DockPanel Name="TitleBar">
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Left"
                    Spacing="0">
          <Image Source="/Assets/icon.png"
                 Height="22"
                 Width="22"
                 VerticalAlignment="Center"
                 Margin="8,0,3,0"
                 Name="WindowIcon"></Image>
          <TextBlock Text="{Binding $parent[Window].Title}"
                     FontSize="12"
                     VerticalAlignment="Center"
                     IsHitTestVisible="False"
                     Name="SystemChromeTitle"></TextBlock>
        </StackPanel>
      </DockPanel>
    </Grid>
  </StackPanel>
</UserControl>
